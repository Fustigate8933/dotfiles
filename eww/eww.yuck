  )
)

(deflisten volume :initial "0" "/home/fustigate/.config/eww/scripts/get_volume.sh")

(defvar show_volume false)

(defwidget volume_slider []
  (box
    :class "volume-box"
    (revealer
      ;:visible "${show_volume == true ? true : false}"
      :visible true
      :transition "slideright"
      ;:reveal "${show_volume == true ? true : false}"
      :reveal true
      :duration 500
      (scale
        :value volume
        :min -5.0
        :max 150.0
        :active true
        :orientation "h"
        :class "volume-slider"
      )
    )
  )
)

(deflisten cpu :interval "5s" :initial "0" "~/.config/eww/scripts/get_cpu.sh cpu")
(defwidget cpu_progress []
  (box :class "overlay"
    :vexpand true
    :halign "left"
    :tooltip "cpu"
    (overlay
      (circular-progress
        :class "stat-background"
        :value 100
        :start-at 25
        :clockwise true
        :thickness "36"
        " "
      )
      (circular-progress
        :class "stat-progress"
        :value cpu
        :start-at 25
        :clockwise true
        :thickness "5"
        (label :class "progress-text" :text "")
      )
    )
  )
)


