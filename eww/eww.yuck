        :two " "
        :three " "
        :four " "
        :five " "
        :six " "
        :seven " "
      )
	  (microphone_status)
      (pavu)
      (volume_slider)
      (eventbox
        :class "btns-box"
        :onrightclick "~/.config/eww/scripts/launch_more_power_options.sh"
        " "
      )
    )
